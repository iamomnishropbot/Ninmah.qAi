# OpenRouter API Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Authentication
# Generate a secure random token for NINMAH access
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
NINMAH_ACCESS_TOKEN=generate_secure_token_here

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LISP_BRIDGE_PORT=8001

# Frontend Configuration (for local development)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Deployment URLs (update for production)
# VITE_API_URL=https://api.ainunnaki.life
# VITE_WS_URL=wss://api.ainunnaki.life

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Memory Configuration
MEMORY_FILE=backend/data/memory.json

# Logging
LOG_LEVEL=INFO
