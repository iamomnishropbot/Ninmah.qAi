# Your OpenRouter API Key (get from https://openrouter.ai)
# Should start with "sk-or-v1-"
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Which AI model to use (this one is free)
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Your Access Password (make this up - something secure!)
# You'll enter this to access NINMAH
# Example: HiveFather2024! or use: python -c "import secrets; print(secrets.token_urlsafe(32))"
NINMAH_ACCESS_TOKEN=generate_secure_token_here

# Backend Configuration (don't change unless you know what you're doing)
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LISP_BRIDGE_PORT=8001

# Frontend URLs (automatically set by startup script)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Deployment URLs (update for production)
# VITE_API_URL=https://api.ainunnaki.life
# VITE_WS_URL=wss://api.ainunnaki.life

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Memory Configuration
MEMORY_FILE=backend/data/memory.json

# Logging
LOG_LEVEL=INFO
